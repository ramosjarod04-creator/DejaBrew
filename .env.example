# DejaBrew Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ==================== DJANGO CORE ====================
# Generate a new secret key using:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this

# Set to False in production, True only for development
DEBUG=False

# Comma-separated list of allowed hosts
# For PythonAnywhere: yourusername.pythonanywhere.com
ALLOWED_HOSTS=yourusername.pythonanywhere.com,localhost,127.0.0.1

# ==================== DATABASE (Optional - for MySQL) ====================
# Uncomment if using MySQL instead of SQLite
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=yourusername$dejabrew
# DB_USER=yourusername
# DB_PASSWORD=your-mysql-password
# DB_HOST=yourusername.mysql.pythonanywhere-services.com
# DB_PORT=3306

# ==================== EMAIL (Optional) ====================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@dejabrew.com

# ==================== SECURITY ====================
# For production HTTPS
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
